# scenario 8 find the date difference on txn_date from current_Date
df_txn.withColumn("txn_date", to_date(df_txn["txn_date"], "MM-dd-yyyy")) \
	  .withColumn("date_diff",datediff(current_date(),col("txn_date"))) \
